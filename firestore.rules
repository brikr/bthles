service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    match /meta/{document=**} {
      allow read: if request.auth.uid != null;
      allow write: if false;
    }

    match /links/{document=**} {
      allow read, create: if request.auth.uid != null;
    }
  }
}
